<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce_WebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/site.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce_WebApplication.styles.css" asp-append-version="true" />
    <!-- Include jQuery (required by Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Include Popper.js (required by Bootstrap) -->
    <!-- Include Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/zoom.js/2.3.2/zoom.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b>ShopEase</b></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                            <form action="@Url.Action("Search", "Products")" method="get" class="form-inline my-2 my-lg-0">
                                <div class="input-group">
                                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="searchTerm" style="width:500px;">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-success" style="background-color:green;color:white;"type="submit">Search</button>
                                    </div>
                                </div>
                    </form>
                    </li>
                    </ul>
                    <ul class="navbar-nav m-lg-auto">
                        @if(Context.Session.GetString("user") != null)
                        {
                            @if (Context.Session.GetString("user") == "admin")
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-white text-dark">Hello, @Context.Session.GetString("user")!</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark text-white btn btn-primary btn-sm" style="margin-right:10px;" asp-area=" " asp-controller="Admin" asp-action="Dashboard">Admin</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-white text-dark">Hello, @Context.Session.GetString("user")!</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-dark" href="@Url.Action("Profile","Account")">Profile
                                        <i class="fas fa-user-circle"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-dark" href="@Url.Action("Index","Order")">My Orders
                                        <i class="fas fa-shopping-bag"></i>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white text-dark" href="@Url.Action("Index","Cart")">
                                        <i class="fas fa-shopping-cart"></i>
                                        Cart <span id="cartItemCount"></span>
                                    </a>
                                </li>
                            }

                            @*<li class="nav-item dropdown">
                                <span class="nav-link text-white text-dark dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Hello, @Context.Session.GetString("user")!
                                </span>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <!-- Dropdown content goes here -->
                                    <a class="dropdown-item" href="#">Profile</a>
                                    <a class="dropdown-item" href="#">My Orders</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Logout</a>
                                </div>
                            </li>*@

                            
                            <li class="nav-item">
                                <a class="nav-link text-dark text-white btn btn-primary btn-sm" style="margin-right:10px;" asp-area="" asp-controller="Account" asp-action="Logout">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark text-white btn btn-primary btn-sm" style="margin-right:10px;" asp-area="" asp-controller="Account" asp-action="Register">Sign up</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark text-white btn btn-primary btn-sm" style="margin-right:10px;" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white text-dark" href="#">
                                    <i class="fas fa-shopping-cart"></i>
                                    Cart <span id="cartItemCount"></span>
                                </a>
                            </li>
                        }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div>
            <main role="main" class="pb-3">
               @RenderBody()
            </main>
        </div>

 <script src="~/lib/jquery/dist/jquery.min.js"></script>
 <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>
 @await RenderSectionAsync("Scripts", required: false)
 </body>
 </html>
